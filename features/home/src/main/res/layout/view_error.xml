<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/errorView"
    android:layout_width="match_parent"
    android:theme="@style/Theme.AppCompat"
    android:layout_height="match_parent"
    android:background="@color/black">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/view_button_retry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_x4"
        android:drawableEnd="@drawable/ic_retry"
        android:drawableRight="@drawable/ic_retry"
        android:drawablePadding="@dimen/space_x2"
        android:text="@string/retry"
        android:backgroundTint="@color/gray"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_view_error_message" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_view_error_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space_x6"
        android:layout_marginLeft="@dimen/space_x6"
        android:layout_marginTop="@dimen/space_x6"
        android:layout_marginEnd="@dimen/space_x6"
        android:layout_marginRight="@dimen/space_x6"
        android:layout_marginBottom="@dimen/space_x2"
        android:gravity="center"
        android:textColor="@color/white"
        android:fontFamily="@font/montserrat"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="TextView" />

</androidx.constraintlayout.widget.ConstraintLayout>